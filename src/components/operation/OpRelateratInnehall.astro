---
/**
 * OpRelateratInnehall - Relaterat innehåll (sjukdomssida, rehab, etc.)
 * Återanvändbar komponent för operationssidor
 */
interface Props {
  sjukdomUrl?: string;        // ex: "/sjukdomar/axel/ac-ledsartros"
  sjukdomNamn?: string;       // ex: "AC-ledsartros"
  sjukdomBeskrivning?: string;
  rehabUrl?: string;          // ex: "/rehab/axel/..."
  rehabNamn?: string;
  fragaDoktornUrl?: string;   // ex: "/fraga-doktorn/axel/"
  fragaDoktornNamn?: string;  // ex: "Fråga doktorn om axel"
}

const {
  sjukdomUrl,
  sjukdomNamn,
  sjukdomBeskrivning = "Symtom, diagnos, behandlingsalternativ och vanliga frågor.",
  rehabUrl,
  rehabNamn,
  fragaDoktornUrl = "/fraga-doktorn/",
  fragaDoktornNamn = "Fråga doktorn"
} = Astro.props;

const hasContent = sjukdomUrl || rehabUrl || fragaDoktornUrl;
---

{hasContent && (
  <section class="mb-12">
    <div class="bg-gradient-to-br from-blue-50 to-sky-50 rounded-2xl p-8 border border-blue-200">
      <h2 class="text-2xl font-bold text-[#024264] mb-6 flex items-center gap-3">
        <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.828 10.172a4 4 0 00-5.656 0l-4 4a4 4 0 105.656 5.656l1.102-1.101m-.758-4.899a4 4 0 005.656 0l4-4a4 4 0 00-5.656-5.656l-1.1 1.1" />
        </svg>
        Relaterat innehåll
      </h2>
      
      <div class="grid md:grid-cols-2 gap-4">
        
        {/* Sjukdomssida */}
        {sjukdomUrl && (
          <a href={sjukdomUrl} class="group bg-white rounded-xl p-6 border-2 border-blue-200 hover:border-blue-400 hover:shadow-lg transition-all">
            <div class="flex items-start gap-4">
              <div class="w-12 h-12 rounded-lg bg-blue-100 group-hover:bg-blue-200 flex items-center justify-center transition-colors shrink-0">
                <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                </svg>
              </div>
              <div class="flex-1">
                <h3 class="font-bold text-slate-800 text-lg mb-2 group-hover:text-blue-600 transition-colors">
                  Läs mer om {sjukdomNamn || "sjukdomen"}
                </h3>
                <p class="text-slate-600 text-sm mb-3">
                  {sjukdomBeskrivning}
                </p>
                <span class="text-blue-600 text-sm font-medium group-hover:underline">
                  Läs mer →
                </span>
              </div>
            </div>
          </a>
        )}

        {/* Rehab-sida */}
        {rehabUrl && (
          <a href={rehabUrl} class="group bg-white rounded-xl p-6 border-2 border-emerald-200 hover:border-emerald-400 hover:shadow-lg transition-all">
            <div class="flex items-start gap-4">
              <div class="w-12 h-12 rounded-lg bg-emerald-100 group-hover:bg-emerald-200 flex items-center justify-center transition-colors shrink-0">
                <svg class="w-6 h-6 text-emerald-600" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
                </svg>
              </div>
              <div class="flex-1">
                <h3 class="font-bold text-slate-800 text-lg mb-2 group-hover:text-emerald-600 transition-colors">
                  Rehab efter operation
                </h3>
                <p class="text-slate-600 text-sm mb-3">
                  {rehabNamn || "Rehabprogram och övningar efter operationen."}
                </p>
                <span class="text-emerald-600 text-sm font-medium group-hover:underline">
                  Läs mer →
                </span>
              </div>
            </div>
          </a>
        )}

        {/* Fråga doktorn */}
        {fragaDoktornUrl && (
          <a href={fragaDoktornUrl} class="group bg-white rounded-xl p-6 border-2 border-amber-200 hover:border-amber-400 hover:shadow-lg transition-all">
            <div class="flex items-start gap-4">
              <div class="w-12 h-12 rounded-lg bg-amber-100 group-hover:bg-amber-200 flex items-center justify-center transition-colors shrink-0">
                <svg class="w-6 h-6 text-amber-600" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.228 9c.549-1.165 2.03-2 3.772-2 2.21 0 4 1.343 4 3 0 1.4-1.278 2.575-3.006 2.907-.542.104-.994.54-.994 1.093m0 3h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
              </div>
              <div class="flex-1">
                <h3 class="font-bold text-slate-800 text-lg mb-2 group-hover:text-amber-600 transition-colors">
                  {fragaDoktornNamn}
                </h3>
                <p class="text-slate-600 text-sm mb-3">
                  Ställ dina frågor eller läs tidigare besvarade frågor om operationen.
                </p>
                <span class="text-amber-600 text-sm font-medium group-hover:underline">
                  Fråga eller läs mer →
                </span>
              </div>
            </div>
          </a>
        )}

      </div>
    </div>
  </section>
)}

