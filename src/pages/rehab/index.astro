---
import BaseLayout from "../../layouts/BaseLayout.astro";

const title = "Rehab & Träningsprogram - Södermalms Ortopedi";
const description = "Evidensbaserade rehabiliteringsprogram för axel, knä och armbåge. Träningsprogram efter operation och för konservativ behandling.";
---

<BaseLayout title={title} description={description}>
  <main class="container mx-auto px-4 py-12">
    
    <div class="text-center mb-16">
      <h1 class="text-4xl md:text-5xl font-bold text-[#024264] mb-4">
        Rehab & Träningsprogram
      </h1>
      <p class="text-xl text-gray-600 max-w-3xl mx-auto">
        Evidensbaserade rehabiliteringsprogram för optimal återhämtning efter operation eller skada.
      </p>
    </div>

    <!-- Kategori-kort -->
    <div class="grid md:grid-cols-3 gap-8 max-w-6xl mx-auto mb-16">
      
      <!-- Axel -->
      <div class="bg-white rounded-2xl shadow-lg p-8">
        <div class="w-24 h-24 mx-auto mb-6 rounded-full bg-green-50 flex items-center justify-center">
          <img src="/images/icons/Axel-icon.svg" alt="" class="w-16 h-16" />
        </div>
        <h2 class="text-2xl font-bold text-[#024264] text-center mb-4">Axel</h2>
        <p class="text-gray-600 text-center mb-6">
          Träningsprogram för axeln efter operation och vid konservativ behandling.
        </p>
        <div class="text-center">
          <span class="text-sm text-gray-500 italic">Program kommer snart</span>
        </div>
      </div>

      <!-- Knä -->
      <div class="bg-white rounded-2xl shadow-lg p-8">
        <div class="w-24 h-24 mx-auto mb-6 rounded-full bg-green-50 flex items-center justify-center">
          <img src="/images/icons/kna-icon.svg" alt="" class="w-16 h-16" />
        </div>
        <h2 class="text-2xl font-bold text-[#024264] text-center mb-4">Knä</h2>
        <p class="text-gray-600 text-center mb-6">
          Träningsprogram för knäet efter operation och vid konservativ behandling.
        </p>
        <div class="text-center">
          <span class="text-sm text-gray-500 italic">Program kommer snart</span>
        </div>
      </div>

      <!-- Armbåge -->
      <div class="bg-white rounded-2xl shadow-lg p-8">
        <div class="w-24 h-24 mx-auto mb-6 rounded-full bg-green-50 flex items-center justify-center">
          <img src="/images/icons/armbage-icon.svg" alt="" class="w-16 h-16" />
        </div>
        <h2 class="text-2xl font-bold text-[#024264] text-center mb-4">Armbåge</h2>
        <p class="text-gray-600 text-center mb-6">
          Träningsprogram för armbågen efter operation och vid konservativ behandling.
        </p>
        <div class="text-center">
          <span class="text-sm text-gray-500 italic">Program kommer snart</span>
        </div>
      </div>

    </div>

    <!-- Info -->
    <div class="bg-green-50 rounded-2xl p-8 max-w-4xl mx-auto">
      <h2 class="text-2xl font-bold text-[#024264] mb-4 text-center">
        Personligt anpassad rehabilitering
      </h2>
      <p class="text-gray-700 text-center mb-6">
        Alla rehabprogram anpassas individuellt utifrån din diagnos, operation och mål. Vi arbetar med evidensbaserade metoder för bästa möjliga resultat.
      </p>
      <div class="flex justify-center">
        <a href="/fraga-doktorn/" class="bg-[#024264] text-white px-6 py-3 rounded-full font-semibold hover:bg-blue-800 transition-colors">
          Kontakta oss
        </a>
      </div>
    </div>

  </main>
</BaseLayout>

