  return [
    { params: { kategori: 'axel' } },
    { params: { kategori: 'kna' } },
    { params: { kategori: 'armbage' } },
  ];
}

const { kategori } = Astro.params;

// Kontrollera att kategorin finns
if (!kategorier[kategori as keyof typeof kategorier]) {
  return Astro.redirect('/fraga-doktorn/');
}

const categoryInfo = kategorier[kategori as keyof typeof kategorier];

// H√§mta alla publicerade fr√•gor f√∂r denna kategori
const allQuestions = await getCollection('fraga-doktorn', ({ data }) => 
  data.published && data.category === kategori
);

