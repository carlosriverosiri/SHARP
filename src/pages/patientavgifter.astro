---
// src/pages/patientavgifter.astro

// 1. Importera din BaseLayout
import BaseLayout from '../layouts/BaseLayout.astro';

// Strukturerad data för AI & SEO (Schema.org)
// Vi använder FAQPage-schema här för att hjälpa AI att svara på specifika prisfrågor direkt i sökresultatet.
const schemaData = {
  "@context": "https://schema.org",
  "@type": "MedicalWebPage",
  "name": "Patientavgifter och Prislista Ortopedi",
  "description": "Aktuella patientavgifter för specialistvård av knä, axel och armbåge i Stockholm. Vi följer Region Stockholms taxor och högkostnadsskydd gäller.",
  "provider": {
    "@type": "MedicalClinic",
    "name": "Södermalms Ortopedi",
    "address": {
        "@type": "PostalAddress",
        "addressRegion": "Stockholm"
    }
  },
  "mainEntity": {
    "@type": "FAQPage",
    "mainEntity": [
      {
        "@type": "Question",
        "name": "Vad kostar ett besök hos ortoped på Södermalms Ortopedi?",
        "acceptedAnswer": {
          "@type": "Answer",
          "text": "Ett nybesök (med remiss) eller återbesök kostar 275 kr. Frikort gäller."
        }
      },
      {
        "@type": "Question",
        "name": "Gäller högkostnadsskydd och frikort?",
        "acceptedAnswer": {
          "@type": "Answer",
          "text": "Ja, vi har avtal med Region Stockholm. Alla avgifter räknas in i högkostnadsskyddet (upp till 1 450 kr) och frikort gäller."
        }
      },
      {
        "@type": "Question",
        "name": "Vad kostar en dagkirurgisk operation?",
        "acceptedAnswer": {
          "@type": "Answer",
          "text": "En operation kostar 275 kr i patientavgift och ingår i högkostnadsskyddet."
        }
      },
      {
        "@type": "Question",
        "name": "Vad kostar det om jag missar min tid (uteblivet besök)?",
        "acceptedAnswer": {
          "@type": "Answer",
          "text": "Uteblivet besök debiteras med 400 kr om det inte avbokas minst 24 timmar innan. Frikort gäller ej för denna avgift."
        }
      }
    ]
  }
};
---

<BaseLayout title="Patientavgifter & Prislista | Södermalms Ortopedi">

    <!-- Injicera strukturerad data -->
    <script type="application/ld+json" set:html={JSON.stringify(schemaData)} />

    <style>
        /* Sätt Inter som standardfont */
        body {
            font-family: 'Inter', sans-serif;
        }
    </style>

    <!-- Huvudcontainer med mer rymd -->
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12 lg:py-20">
        
        <!-- Header Sektion: Renare och mer inbjudande -->
        <div class="text-center mb-16">
            <h1 class="text-3xl md:text-5xl font-extrabold text-gray-900 tracking-tight">Patientavgifter</h1>
            <p class="mt-4 text-xl text-gray-600 max-w-2xl mx-auto">
                Vi har vårdavtal med Region Stockholm. Här hittar du aktuella priser för besök och behandlingar.
            </p>
            <div class="mt-6 inline-flex items-center px-4 py-2 rounded-full bg-blue-50 text-blue-800 text-sm font-medium">
                <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path></svg>
                Högkostnadsskydd & Frikort gäller
            </div>
        </div>

        <div class="grid grid-cols-1 lg:grid-cols-3 gap-10">

            <!-- Vänsterkolumn: Prislista (Tar upp 2/3 av bredden på stora skärmar) -->
            <div class="lg:col-span-2 space-y-8">
                
                <!-- Sektion: Besök & Behandling -->
                <div class="bg-white rounded-2xl shadow-sm border border-gray-100 overflow-hidden">
                    <div class="px-6 py-5 border-b border-gray-100 bg-gray-50 flex items-center justify-between">
                        <h2 class="text-lg font-bold text-gray-900 flex items-center">
                            <svg class="w-5 h-5 mr-2 text-sky-600" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path></svg>
                            Mottagning & Operation
                        </h2>
                        <span class="text-xs font-semibold text-gray-500 uppercase tracking-wider">Pris</span>
                    </div>
                    
                    <div class="divide-y divide-gray-100">
                        <!-- Nybesök -->
                        <div class="p-6 hover:bg-gray-50 transition duration-150 ease-in-out flex flex-col sm:flex-row justify-between items-start sm:items-center group">
                            <div class="flex-1 pr-4">
                                <h3 class="text-base font-semibold text-gray-900 group-hover:text-sky-700 transition-colors">Nybesök</h3>
                                <p class="text-sm text-gray-500 mt-1">Bedömning av specialistläkare (kräver remiss).</p>
                            </div>
                            <div class="mt-4 sm:mt-0 text-right">
                                <span class="block text-xl font-bold text-gray-900">275 kr</span>
                                <span class="text-xs text-green-600 font-medium bg-green-50 px-2 py-1 rounded-full inline-block mt-1">Ingår i högkostnadsskydd</span>
                            </div>
                        </div>

                        <!-- Återbesök -->
                        <div class="p-6 hover:bg-gray-50 transition duration-150 ease-in-out flex flex-col sm:flex-row justify-between items-start sm:items-center group">
                            <div class="flex-1 pr-4">
                                <h3 class="text-base font-semibold text-gray-900 group-hover:text-sky-700 transition-colors">Återbesök</h3>
                                <p class="text-sm text-gray-500 mt-1">Uppföljning efter behandling eller operation.</p>
                            </div>
                            <div class="mt-4 sm:mt-0 text-right">
                                <span class="block text-xl font-bold text-gray-900">275 kr</span>
                                <span class="text-xs text-green-600 font-medium bg-green-50 px-2 py-1 rounded-full inline-block mt-1">Ingår i högkostnadsskydd</span>
                            </div>
                        </div>

                        <!-- Operation -->
                        <div class="p-6 hover:bg-gray-50 transition duration-150 ease-in-out flex flex-col sm:flex-row justify-between items-start sm:items-center group">
                            <div class="flex-1 pr-4">
                                <h3 class="text-base font-semibold text-gray-900 group-hover:text-sky-700 transition-colors">Operation</h3>
                                <p class="text-sm text-gray-500 mt-1">Dagkirurgiskt ingrepp (inklusive förberedelser).</p>
                            </div>
                            <div class="mt-4 sm:mt-0 text-right">
                                <span class="block text-xl font-bold text-gray-900">275 kr</span>
                                <span class="text-xs text-green-600 font-medium bg-green-50 px-2 py-1 rounded-full inline-block mt-1">Ingår i högkostnadsskydd</span>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Sektion: Administrativt / Övrigt -->
                <div class="bg-white rounded-2xl shadow-sm border border-red-100 overflow-hidden">
                    <div class="px-6 py-5 border-b border-red-100 bg-red-50 flex items-center justify-between">
                        <h2 class="text-lg font-bold text-red-900 flex items-center">
                            <svg class="w-5 h-5 mr-2 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>
                            Övriga avgifter
                        </h2>
                    </div>
                    
                    <div class="p-6 flex flex-col sm:flex-row justify-between items-start sm:items-center">
                        <div class="flex-1 pr-4">
                            <h3 class="text-base font-semibold text-gray-900">Uteblivet besök</h3>
                            <p class="text-sm text-gray-500 mt-1">Gäller vid uteblivande eller om avbokning sker senare än 24 timmar innan bokad tid.</p>
                        </div>
                        <div class="mt-4 sm:mt-0 text-right">
                            <span class="block text-xl font-bold text-gray-900">400 kr</span>
                            <span class="text-xs text-red-600 font-medium bg-red-50 px-2 py-1 rounded-full inline-block mt-1">Frikort gäller ej</span>
                        </div>
                    </div>
                </div>

            </div>

            <!-- Högerkolumn: Information & Kort (Sticky på desktop) -->
            <div class="lg:col-span-1 space-y-6">
                
                <!-- Info om Högkostnadsskydd -->
                <div class="bg-sky-50 rounded-2xl p-6 border border-sky-100 sticky top-8">
                    <h3 class="text-lg font-bold text-sky-900 mb-4 flex items-center">
                        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>
                        Så fungerar det
                    </h3>
                    
                    <ul class="space-y-4">
                        <li class="flex items-start">
                            <span class="flex-shrink-0 w-1.5 h-1.5 mt-2 bg-sky-400 rounded-full mr-3"></span>
                            <span class="text-sm text-sky-800">
                                <strong class="block text-sky-900">Högkostnadsskydd</strong>
                                Du betalar max <strong class="whitespace-nowrap">1 450 kr</strong> under en tolvmånadersperiod för besök i öppenvården.
                            </span>
                        </li>
                        <li class="flex items-start">
                            <span class="flex-shrink-0 w-1.5 h-1.5 mt-2 bg-sky-400 rounded-full mr-3"></span>
                            <span class="text-sm text-sky-800">
                                <strong class="block text-sky-900">Frikort</strong>
                                När du nått taket får du frikort. Det gäller för alla dina fortsatta besök hos oss (och annan vård) resten av perioden.
                            </span>
                        </li>
                        <li class="flex items-start">
                            <span class="flex-shrink-0 w-1.5 h-1.5 mt-2 bg-sky-400 rounded-full mr-3"></span>
                            <span class="text-sm text-sky-800">
                                <strong class="block text-sky-900">Digitalt system</strong>
                                Region Stockholm använder ett elektroniskt frikortssystem. Vi ser direkt i kassan om du har frikort eller hur mycket du har kvar till gränsen.
                            </span>
                        </li>
                    </ul>

                    <div class="mt-6 pt-6 border-t border-sky-200">
                        <p class="text-xs text-sky-700 italic">
                            Har du frågor om din betalning? <br>
                            Kontakta oss på <a href="tel:0855110422" class="underline hover:text-sky-900">08-55 11 04 22</a>.
                        </p>
                    </div>
                </div>

            </div>

        </div>
    </div>

</BaseLayout>