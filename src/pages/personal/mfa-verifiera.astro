/**
 * MFA-verifiering vid inloggning
 * URL: /personal/mfa-verifiera
 * 
 * Anv√§ndaren omdirigeras hit efter lyckad l√∂senordsinloggning
 * om de har 2FA aktiverat.
 */

export const prerender = false;

import { behoverMfaVerifiering, verifieraMfaInloggning, arInloggad } from '../../lib/auth';

// Om redan fullt inloggad (AAL2), omdirigera till √∂versikt
const inloggad = await arInloggad(Astro.cookies);
if (inloggad) {
  const mfaStatus = await behoverMfaVerifiering();
  if (!mfaStatus.behovs) {
    return Astro.redirect('/personal/oversikt');
  }
}

// H√§mta faktor-ID f√∂r verifiering
const mfaStatus = await behoverMfaVerifiering();
const faktorId = mfaStatus.faktorId || Astro.url.searchParams.get('faktorId');

if (!mfaStatus.behovs && !faktorId) {
  // Ingen MFA beh√∂vs, g√• till √∂versikt
  return Astro.redirect('/personal/oversikt');
}

// Hantera POST (verifiering)
let errorMessage = '';

if (Astro.request.method === 'POST') {
  try {
    const formData = await Astro.request.formData();
    const kod = formData.get('kod')?.toString() || '';
    const postFaktorId = formData.get('faktorId')?.toString() || faktorId || '';
    
    if (!kod || kod.length !== 6) {
      errorMessage = 'Ange en giltig 6-siffrig kod';
    } else if (!postFaktorId) {
      errorMessage = 'Faktor-ID saknas. Logga in igen.';
    } else {
      const result = await verifieraMfaInloggning(postFaktorId, kod);
      
      if (result.success) {
        return Astro.redirect('/personal/oversikt');
      } else {
        errorMessage = result.error || 'Fel kod. F√∂rs√∂k igen.';
      }
    }
  } catch (e) {
    console.error('MFA verify error:', e);
    errorMessage = 'Ett fel uppstod. F√∂rs√∂k igen.';
  }
}
