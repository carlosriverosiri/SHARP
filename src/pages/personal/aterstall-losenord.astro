      <h1>Återställ lösenord</h1>
      <p>Ange ett nytt lösenord för ditt konto</p>
    </div>
    
    {errorMessage && (
      <div class="error-message">
        <svg width="20" height="20" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
        </svg>
        {errorMessage}
      </div>
    )}
    
    {successMessage && (
      <div class="success-message">
        <svg width="20" height="20" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
        </svg>
        {successMessage}
      </div>
    )}
    
    {!hash || !showPasswordForm ? (
      <div class="info-box">
        <p><strong>Ingen återställningslänk hittades.</strong></p>
        <p style="margin-top: 0.5rem;">Klicka på länken i e-postmeddelandet eller begär en ny återställningslänk från inloggningssidan.</p>
      </div>
    ) : (
      <form method="POST">
        <div class="form-group">
          <label for="new-password">Nytt lösenord</label>
          <input 
            type="password" 
            id="new-password" 
            name="new-password" 
            placeholder="Minst 6 tecken"
            autocomplete="new-password"
            required
            minlength="6"
            autofocus
          >
        </div>
        
        <div class="form-group">
          <label for="confirm-password">Bekräfta lösenord</label>
          <input 
            type="password" 
            id="confirm-password" 
            name="confirm-password" 
            placeholder="Ange samma lösenord igen"
            autocomplete="new-password"
            required
            minlength="6"
          >
        </div>
        
        <button type="submit" class="submit-btn">
          Uppdatera lösenord
        </button>
      </form>
    )}
    
    <a href="/personal/" class="back-link">← Tillbaka till inloggning</a>
  </div>
