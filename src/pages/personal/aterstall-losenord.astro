/**
 * Personalportal - Återställ lösenord
 * 
 * Denna sida hanterar lösenordsåterställning från Supabase
 */

// SSR för denna sida (krävs för cookies och Supabase auth)
export const prerender = false;

import { supabase } from '../../lib/supabase';
import { arInloggad } from '../../lib/auth';

// Om redan inloggad, redirecta till översikt
if (await arInloggad(Astro.cookies)) {
  return Astro.redirect('/personal/oversikt');
}

// Hämta hash och type från URL (Supabase skickar dessa)
const url = new URL(Astro.request.url);
const hash = url.searchParams.get('hash') || '';
const type = url.searchParams.get('type') || '';

let errorMessage = '';
let successMessage = '';
let showPasswordForm = false;

// Om det finns en hash i URL, verifiera den
if (hash && type === 'recovery') {
  try {
    // Verifiera hash med Supabase
    const { data, error } = await supabase.auth.verifyOtp({
      token_hash: hash,
      type: 'recovery'
    });

    if (error) {
      errorMessage = 'Återställningslänken är ogiltig eller har gått ut. Begär en ny länk.';
    } else if (data?.user) {
      // Hash är giltig - visa formulär för nytt lösenord
      showPasswordForm = true;
    }
  } catch (err: any) {
    errorMessage = 'Ett fel uppstod vid verifiering. Försök igen.';
    console.error('Verifieringsfel:', err);
  }
}

// Hantera POST (nytt lösenord)
if (Astro.request.method === 'POST') {
  const formData = await Astro.request.formData();
  const newPassword = formData.get('new-password')?.toString() || '';
  const confirmPassword = formData.get('confirm-password')?.toString() || '';

  if (!newPassword || newPassword.length < 6) {
    errorMessage = 'Lösenordet måste vara minst 6 tecken långt.';
  } else if (newPassword !== confirmPassword) {
    errorMessage = 'Lösenorden matchar inte.';
  } else {
    try {
      const { error } = await supabase.auth.updateUser({
        password: newPassword
      });

      if (error) {
        errorMessage = error.message || 'Kunde inte uppdatera lösenordet.';
      } else {
        successMessage = 'Lösenordet har uppdaterats! Du kan nu logga in.';
        // Redirecta efter 2 sekunder
        return Astro.redirect('/personal');
      }
    } catch (err: any) {
      errorMessage = 'Ett fel uppstod. Försök igen.';
      console.error('Uppdateringsfel:', err);
    }
  }
}
