    /* Dashboard with draggable project blocks */
    .projects-dashboard {
      padding: 24px;
    }
    
    .dashboard-header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 24px;
    }
    
    .dashboard-title {
      display: flex;
      align-items: center;
      gap: 12px;
    }
    
    .dashboard-title h1 {
      font-size: 24px;
      font-weight: 600;
      margin: 0;
    }
    
    .dashboard-title svg {
      color: var(--color-primary);
    }
    
    /* Project blocks - Portal card style */
    .projects-dashboard .project-blocks {
      display: grid !important;
      grid-template-columns: repeat(auto-fill, minmax(280px, 1fr)) !important;
      gap: 20px !important;
    }
    
    .project-block {
      background: var(--bg-primary);
      border: 1px solid var(--border-color);
      border-radius: 16px;
      padding: 20px;
      cursor: grab;
      transition: all 0.25s ease;
      position: relative;
      min-height: 200px;
      display: flex;
      flex-direction: column;
    }
    
    .project-block:hover {
      border-color: rgba(37, 99, 235, 0.3);
      box-shadow: 0 8px 30px rgba(0, 0, 0, 0.08);
      transform: translateY(-3px);
    }
    
    .project-block.dragging {
      opacity: 0.6;
      cursor: grabbing;
      transform: scale(1.02) rotate(1deg);
      box-shadow: 0 15px 40px rgba(0, 0, 0, 0.15);
      z-index: 100;
    }
    
    .project-block.drag-over {
      border: 2px dashed var(--color-primary);
      background: rgba(37, 99, 235, 0.02);
    }
    
    /* Icon box - top left */
    .project-block-icon {
      width: 48px;
      height: 48px;
      border-radius: 12px;
      display: flex;
      align-items: center;
      justify-content: center;
      margin-bottom: 16px;
    }
    
    .project-block-icon svg {
      width: 24px;
      height: 24px;
      color: white;
    }
    
    /* Constrain ALL SVGs inside project blocks */
    .project-block svg {
      max-width: 24px;
      max-height: 24px;
      flex-shrink: 0;
    }
    
    .project-block-icon svg {
      width: 24px;
      height: 24px;
    }
    
    .project-block-icon.icon-blue { background: linear-gradient(135deg, #3b82f6 0%, #1d4ed8 100%) !important; }
    .project-block-icon.icon-purple { background: linear-gradient(135deg, #8b5cf6 0%, #6d28d9 100%); }
    .project-block-icon.icon-green { background: linear-gradient(135deg, #10b981 0%, #047857 100%); }
    .project-block-icon.icon-orange { background: linear-gradient(135deg, #f59e0b 0%, #b45309 100%); }
    .project-block-icon.icon-pink { background: linear-gradient(135deg, #ec4899 0%, #be185d 100%); }
    .project-block-icon.icon-teal { background: linear-gradient(135deg, #14b8a6 0%, #0f766e 100%); }
    .project-block-icon.icon-red { background: linear-gradient(135deg, #ef4444 0%, #b91c1c 100%); }
    
