    .category:hover {
      background: var(--bg-hover);
    }
    
    .category.active {
      background: rgba(37, 99, 235, 0.1);
      color: var(--color-primary);
    }
    
    .category-name {
      flex: 1;
    }
    
    .category-count {
      font-size: 11px;
      color: var(--text-muted);
      background: var(--bg-hover);
      padding: 2px 6px;
      border-radius: 8px;
      min-width: 16px;
      text-align: center;
