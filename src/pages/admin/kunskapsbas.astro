  <script is:inline>
    // State
    var projects = [];
    var currentProjectId = null;
    var currentCategory = null;
    var currentItems = [];
    var currentItemId = null;
    
    // Category metadata
    var CATEGORIES = {
      dokument: { label: 'Dokument' },
      litteratur: { label: 'Litteratur' },
      ljud: { label: 'Ljudsammanfattningar' },
      ai_fragor: { label: 'AI-frågor' },
      prompter: { label: 'Prompter' },
      radata: { label: 'Rådata' }
    };
    
    // Init
    document.addEventListener('DOMContentLoaded', function() {
      loadProjects();
    });
    
    // Load projects
    async function loadProjects() {
      try {
        const res = await fetch('/api/kunskapsbas/projects');
        const data = await res.json();
        
        if (data.error) {
          showToast(data.error);
          return;
        }
        
        projects = data.projects || [];
        renderTree();
      } catch (err) {
        console.error('Error loading projects:', err);
        showToast('Kunde inte ladda projekt');
      }
    }
    
    // Render tree
    function renderTree() {
      const container = document.getElementById('tree-container');
      
      if (projects.length === 0) {
        container.innerHTML = `
          <div style="padding: 24px; text-align: center; color: var(--text-muted);">
            <div style="font-size: 14px;">Inga projekt ännu</div>
          </div>
        `;
        return;
      }
      
      container.innerHTML = projects.map(project => {
        const totalCount = project.categories?.reduce((sum, c) => sum + c.count, 0) || 0;
        const isExpanded = project.id === currentProjectId;
        
        return `
          <div class="project ${isExpanded ? 'expanded' : ''}" data-id="${project.id}">
            <div class="project-header ${isExpanded ? 'active' : ''}" onclick="toggleProject('${project.id}')">
              <span class="project-chevron">&gt;</span>
              <span class="project-name">${project.name}</span>
              ${totalCount > 0 ? `<span class="project-count">${totalCount}</span>` : ''}
            </div>
            <div class="categories">
              ${(project.categories || []).map(cat => `
                <div class="category ${currentProjectId === project.id && currentCategory === cat.key ? 'active' : ''}" 
                     onclick="selectCategory('${project.id}', '${cat.key}')">
                  <span class="category-name">${cat.label}</span>
                  ${cat.count > 0 ? `<span class="category-count">${cat.count}</span>` : ''}
                </div>
              `).join('')}
            </div>
          </div>
        `;
      }).join('');
    }
    
    // Toggle project
    function toggleProject(projectId) {
      if (currentProjectId === projectId) {
        // If clicking the same project, just toggle expansion
        const el = document.querySelector(`.project[data-id="${projectId}"]`);
        el?.classList.toggle('expanded');
      } else {
        currentProjectId = projectId;
        currentCategory = null;
        renderTree();
        updateBreadcrumb();
        showProjectOverview();
      }
    }
    
    // Select category
    function selectCategory(projectId, category) {
      currentProjectId = projectId;
      currentCategory = category;
      renderTree();
      updateBreadcrumb();
      loadItems();
      
      document.getElementById('new-item-btn').style.display = 'flex';
    }
    
    // Update breadcrumb
    function updateBreadcrumb() {
      const breadcrumb = document.getElementById('breadcrumb');
      const project = projects.find(p => p.id === currentProjectId);
      
      let html = '<span class="breadcrumb-item">Kunskapsbas</span>';
      
      if (project) {
        html += ` <span style="color: var(--text-muted);">/</span> `;
        html += `<span class="breadcrumb-item">${project.name}</span>`;
        
        if (currentCategory) {
          const cat = CATEGORIES[currentCategory];
          html += ` <span style="color: var(--text-muted);">/</span> `;
          html += `<span class="breadcrumb-current">${cat.label}</span>`;
        }
      }
      
      breadcrumb.innerHTML = html;
    }
    
    // Show project overview
    function showProjectOverview() {
      const project = projects.find(p => p.id === currentProjectId);
      if (!project) return;
      
      const totalDocs = (project.categories || []).reduce((sum, c) => sum + c.count, 0);
      
      const content = document.getElementById('content-area');
      content.innerHTML = `
        <div style="max-width: 600px;">
          <div style="display: flex; align-items: center; justify-content: space-between; margin-bottom: 24px;">
            <div>
              <h2 style="font-size: 24px; margin-bottom: 4px;">${project.name}</h2>
              ${project.description ? `<p style="color: var(--text-muted); margin: 0;">${project.description}</p>` : ''}
            </div>
            <a href="/admin/ai-council?kb_project=${project.id}" class="btn btn-primary" style="text-decoration: none; white-space: nowrap;">
              Fråga AI
            </a>
          </div>
          
          <div style="display: grid; gap: 8px;">
            ${(project.categories || []).map(cat => `
              <div class="item-card" onclick="selectCategory('${project.id}', '${cat.key}')" style="padding: 12px 16px;">
                <div style="display: flex; align-items: center; justify-content: space-between;">
                  <span class="item-title" style="margin: 0;">${cat.label}</span>
                  <span style="color: var(--text-muted); font-size: 13px;">${cat.count}</span>
                </div>
              </div>
            `).join('')}
          </div>
        </div>
      `;
      
      document.getElementById('new-item-btn').style.display = 'none';
    }
    
    // Load items
    async function loadItems() {
      if (!currentProjectId || !currentCategory) return;
      
      const content = document.getElementById('content-area');
      content.innerHTML = '<div class="loading"><div class="spinner"></div>Laddar...</div>';
      
      try {
        const res = await fetch(`/api/kunskapsbas/items?project_id=${currentProjectId}&category=${currentCategory}`);
        const data = await res.json();
        
        currentItems = data.items || [];
        renderItems();
      } catch (err) {
        console.error('Error loading items:', err);
        showToast('Kunde inte ladda dokument');
      }
    }
    
    // Render items
    function renderItems() {
      const content = document.getElementById('content-area');
      const cat = CATEGORIES[currentCategory];
      
      if (currentItems.length === 0) {
        content.innerHTML = `
          <div class="empty-state">
            <div class="empty-title">Inga ${cat.label.toLowerCase()} ännu</div>
            <div class="empty-text">Skapa ditt första dokument i denna kategori</div>
            <button class="btn btn-primary" onclick="openNewItemModal()">
              <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <line x1="12" y1="5" x2="12" y2="19"></line>
                <line x1="5" y1="12" x2="19" y2="12"></line>
              </svg>
              Skapa dokument
            </button>
          </div>
        `;
        return;
      }
      
      content.innerHTML = `
        <div class="items-list">
          ${currentItems.map(item => `
            <div class="item-card ${currentItemId === item.id ? 'active' : ''}" onclick="openItem('${item.id}')">
              <div class="item-title">${item.title}</div>
              ${item.summary ? `<div class="item-summary">${item.summary}</div>` : ''}
              <div class="item-meta">
                <span>${formatDate(item.updated_at)}</span>
              </div>
            </div>
          `).join('')}
        </div>
      `;
    }
    
    // Open item
    function openItem(itemId) {
      const item = currentItems.find(i => i.id === itemId);
      if (!item) return;
      
      currentItemId = itemId;
      renderItems();
      
      document.getElementById('editor-title').value = item.title;
      document.getElementById('editor-content').value = item.content || '';
      document.getElementById('editor-panel').classList.add('open');
    }
    
    // Close editor
    function closeEditor() {
      document.getElementById('editor-panel').classList.remove('open');
      currentItemId = null;
      renderItems();
    }
    
    // Save item
    async function saveItem() {
      const title = document.getElementById('editor-title').value.trim();
      const content = document.getElementById('editor-content').value;
      
      if (!title) {
        showToast('Titel krävs');
        return;
      }
      
      try {
        const res = await fetch('/api/kunskapsbas/items', {
          method: 'PUT',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({
            id: currentItemId,
            title,
            content
          })
        });
        
        const data = await res.json();
        
        if (data.error) {
          showToast(data.error);
          return;
        }
        
        showToast('Sparat!');
        closeEditor();
        loadItems();
        loadProjects(); // Update counts
      } catch (err) {
        console.error('Error saving item:', err);
        showToast('Kunde inte spara');
      }
    }
    
    // Modal functions
    function openNewProjectModal() {
      document.getElementById('project-name').value = '';
      document.getElementById('project-description').value = '';
      document.getElementById('new-project-modal').classList.add('open');
      document.getElementById('project-name').focus();
    }
    
    function openNewItemModal() {
      if (!currentProjectId || !currentCategory) {
        showToast('Välj ett projekt och kategori först');
        return;
      }
      document.getElementById('item-title').value = '';
      document.getElementById('new-item-modal').classList.add('open');
      document.getElementById('item-title').focus();
    }
    
    function closeModal(id) {
      document.getElementById(id).classList.remove('open');
    }
    
    // Create project
    async function createProject() {
      console.log('createProject called');
      const nameInput = document.getElementById('project-name');
      const descInput = document.getElementById('project-description');
      
      if (!nameInput || !descInput) {
        console.error('Input elements not found');
        showToast('Fel: Kunde inte hitta formulärfält');
        return;
      }
      
      const name = nameInput.value.trim();
      const description = descInput.value.trim();
      
      console.log('Creating project:', { name, description });
      
      if (!name) {
        showToast('Projektnamn krävs');
        return;
      }
      
      try {
        showToast('Skapar projekt...');
        
        const res = await fetch('/api/kunskapsbas/projects', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({
            name,
            description
          })
        });
        
        console.log('Response status:', res.status);
        const data = await res.json();
        console.log('Response data:', data);
        
        if (data.error) {
          console.error('API error:', data.error);
          showToast('Fel: ' + data.error);
          return;
        }
        
        closeModal('new-project-modal');
        showToast('Projekt skapat!');
        loadProjects();
        
        // Select the new project
        currentProjectId = data.project.id;
        currentCategory = null;
      } catch (err) {
        console.error('Error creating project:', err);
        showToast('Nätverksfel: ' + err.message);
      }
    }
    
    // Create item
    async function createItem() {
      const title = document.getElementById('item-title').value.trim();
      
      if (!title) {
        showToast('Titel krävs');
        return;
      }
      
      try {
        const res = await fetch('/api/kunskapsbas/items', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({
            project_id: currentProjectId,
            category: currentCategory,
            title
          })
        });
        
        const data = await res.json();
        
        if (data.error) {
          showToast(data.error);
          return;
        }
        
        closeModal('new-item-modal');
        showToast('Dokument skapat!');
        loadItems();
        loadProjects(); // Update counts
        
        // Open the new item in editor
        currentItemId = data.item.id;
        document.getElementById('editor-title').value = data.item.title;
        document.getElementById('editor-content').value = '';
        document.getElementById('editor-panel').classList.add('open');
      } catch (err) {
        console.error('Error creating item:', err);
        showToast('Kunde inte skapa dokument');
      }
    }
    
    // Utilities
    function formatDate(dateStr) {
      const date = new Date(dateStr);
      const now = new Date();
      const diff = now - date;
      
      if (diff < 60000) return 'Just nu';
      if (diff < 3600000) return `${Math.floor(diff / 60000)} min sedan`;
      if (diff < 86400000) return `${Math.floor(diff / 3600000)} tim sedan`;
      if (diff < 604800000) return `${Math.floor(diff / 86400000)} dagar sedan`;
      
      return date.toLocaleDateString('sv-SE');
    }
    
    function showToast(message) {
      const toast = document.getElementById('toast');
      toast.textContent = message;
      toast.classList.add('show');
      setTimeout(() => toast.classList.remove('show'), 3000);
    }
    
    // Close modals on escape
    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape') {
        document.querySelectorAll('.modal-overlay.open').forEach(m => m.classList.remove('open'));
        closeEditor();
      }
    });
    
    // Close modal on overlay click
    document.querySelectorAll('.modal-overlay').forEach(overlay => {
      overlay.addEventListener('click', (e) => {
        if (e.target === overlay) {
          overlay.classList.remove('open');
        }
      });
    });
  </script>
</body>
