    }
    
    .icon-btn {
      width: 32px;
      height: 32px;
      border: none;
      background: transparent;
      border-radius: 6px;
      cursor: pointer;
      display: flex;
      align-items: center;
      justify-content: center;
      color: var(--text-sidebar);
      transition: all 0.15s;
    }
    
    .icon-btn:hover {
      background: var(--bg-sidebar-hover);
      color: var(--text-sidebar-active);
    }
    
    .tree-container {
      flex: 1;
      overflow-y: auto;
      padding: 0.5rem;
    }
    
    /* Projekt */
    .project {
      margin-bottom: 4px;
    }
    
    .project-header {
      display: flex;
      align-items: center;
      padding: 0.5rem 0.75rem;
      border-radius: 6px;
      cursor: pointer;
      transition: all 0.15s;
      gap: 8px;
      color: var(--text-sidebar);
    }
    
    .project-header:hover {
      background: var(--bg-sidebar-hover);
      color: var(--text-sidebar-active);
    }
    
    .project-header.active {
      background: var(--bg-sidebar-active);
      color: var(--text-sidebar-active);
    }
    
    .project-chevron {
      width: 16px;
      font-size: 12px;
      color: var(--text-muted);
      transition: transform 0.2s;
      flex-shrink: 0;
      font-family: monospace;
    }
    
    .project.expanded .project-chevron {
      transform: rotate(90deg);
    }
    
    .project-name {
      flex: 1;
      font-size: 14px;
      font-weight: 500;
      white-space: nowrap;
      overflow: hidden;
      text-overflow: ellipsis;
    }
    
    .project-count {
      font-size: 12px;
      color: var(--text-muted);
      background: var(--bg-hover);
      padding: 2px 8px;
      border-radius: 10px;
      min-width: 20px;
      text-align: center;
    }
    
    /* Kategorier */
    .categories {
      display: none;
      padding-left: 32px;
      margin-top: 4px;
    }
    
    .project.expanded .categories {
      display: block;
    }
    
    .category {
      display: flex;
      align-items: center;
      padding: 0.375rem 0.75rem 0.375rem 2rem;
      border-radius: 4px;
      cursor: pointer;
      transition: all 0.15s;
      gap: 8px;
      font-size: 13px;
      color: var(--text-sidebar);
    }
    
    .category:hover {
      background: var(--bg-sidebar-hover);
      color: var(--text-sidebar-active);
    }
    
    .category.active {
      background: var(--bg-sidebar-active);
      color: var(--text-sidebar-active);
    }
    
    .category-name {
      flex: 1;
    }
    
    .category-count {
      font-size: 11px;
      color: var(--text-muted);
      background: var(--bg-hover);
      padding: 2px 6px;
      border-radius: 8px;
      min-width: 16px;
      text-align: center;
    }
    
    .category.active .category-count {
      color: var(--color-primary);
    }
    
    /* Huvudområde */
    .main-area {
      flex: 1;
      display: flex;
      flex-direction: column;
      min-width: 0;
    }
    
    .main-header {
      padding: 16px 24px;
      border-bottom: 1px solid var(--border-color);
      background: var(--bg-secondary);
      display: flex;
      align-items: center;
      justify-content: space-between;
    }
    
    .breadcrumb {
      display: flex;
      align-items: center;
      gap: 8px;
      font-size: 14px;
      color: var(--text-muted);
    }
    
    .breadcrumb-item {
      color: var(--text-secondary);
    }
    
    .breadcrumb-current {
      color: var(--text-primary);
      font-weight: 500;
    }
    
    .main-actions {
      display: flex;
      gap: 8px;
    }
    
    .btn {
      padding: 8px 16px;
      border-radius: 8px;
      font-size: 13px;
      font-weight: 500;
      cursor: pointer;
      transition: all 0.15s;
      display: flex;
      align-items: center;
      gap: 6px;
      border: none;
    }
    
    .btn-primary {
      background: var(--color-primary);
      color: white;
    }
    
    .btn-primary:hover {
      background: var(--color-primary-hover);
    }
    
    .btn-secondary {
      background: var(--bg-secondary);
      color: var(--text-primary);
      border: 1px solid var(--border-color);
    }
    
    .btn-secondary:hover {
      background: var(--bg-hover);
    }
    
    .btn-ghost {
      background: transparent;
      color: var(--text-muted);
      border: none;
      padding: 8px;
    }
    
    .btn-ghost:hover {
      background: var(--bg-hover);
      color: var(--text-primary);
    }
    
    /* Content Area */
    .content-area {
      flex: 1;
      overflow-y: auto;
      padding: 24px;
    }
    
    /* Items List */
    .items-list {
      display: flex;
      flex-direction: column;
      gap: 8px;
    }
    
    .item-card {
      background: var(--bg-secondary);
      border: 1px solid var(--border-color);
      border-radius: 8px;
      padding: 16px;
      cursor: pointer;
      transition: all 0.15s;
    }
    
    .item-card:hover {
      border-color: var(--color-primary);
      box-shadow: var(--shadow-sm);
    }
    
    .item-card.active {
      border-color: var(--color-primary);
      background: rgba(37, 99, 235, 0.02);
    }
    
    .item-title {
      font-size: 14px;
      font-weight: 500;
      margin-bottom: 4px;
    }
    
    .item-summary {
      font-size: 13px;
      color: var(--text-muted);
      line-height: 1.4;
      display: -webkit-box;
      -webkit-line-clamp: 2;
      -webkit-box-orient: vertical;
      overflow: hidden;
    }
    
    .item-meta {
      display: flex;
      gap: 16px;
      margin-top: 8px;
      font-size: 12px;
      color: var(--text-muted);
    }
    
    /* Empty State */
    .empty-state {
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      height: 100%;
      text-align: center;
      padding: 48px;
    }
    
    .empty-title {
      font-size: 16px;
      font-weight: 500;
      margin-bottom: 8px;
    }
    
    .empty-icon {
      font-size: 48px;
      margin-bottom: 16px;
    }
    .empty-text {
      font-size: 14px;
      color: var(--text-muted);
      margin-bottom: 16px;
      line-height: 1.8;
    }
    .empty-features {
      display: flex;
      flex-direction: column;
      gap: 8px;
      margin-bottom: 24px;
      text-align: left;
    }
    .feature-item {
      font-size: 13px;
      color: var(--text-secondary);
    }
    
    /* Category Cards for project overview */
    .category-grid {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(180px, 1fr));
      gap: 12px;
      margin-top: 16px;
    }
    .category-card {
      background: var(--bg-secondary);
      border: 1px solid var(--border-color);
      border-radius: 10px;
      padding: 16px;
      cursor: pointer;
      transition: all 0.2s;
      position: relative;
    }
    .category-card:hover {
      border-color: var(--color-primary);
      transform: translateY(-2px);
      box-shadow: var(--shadow-md);
    }
    .category-card-icon {
      font-size: 24px;
      margin-bottom: 8px;
    }
    .category-card-name {
      font-size: 14px;
      font-weight: 500;
      color: var(--text-primary);
      margin-bottom: 4px;
    }
    .category-card-count {
      font-size: 12px;
      color: var(--text-muted);
    }
    .category-card-badge {
      position: absolute;
      top: 12px;
      right: 12px;
      background: var(--color-primary);
      color: white;
      font-size: 11px;
      font-weight: 600;
      padding: 2px 8px;
      border-radius: 10px;
    }
    .category-card-badge:empty { display: none; }
    
    /* Project header in overview */
    .project-overview-header {
      display: flex;
      align-items: flex-start;
      justify-content: space-between;
      margin-bottom: 24px;
      gap: 16px;
    }
    .project-overview-info h2 {
      font-size: 24px;
      margin: 0 0 4px 0;
    }
    .project-overview-info p {
      color: var(--text-muted);
      margin: 0;
      font-size: 14px;
    }
    .project-overview-actions {
      display: flex;
      gap: 8px;
      flex-shrink: 0;
    }
    
    /* Quick stats */
    .quick-stats {
      display: flex;
      gap: 24px;
      margin-bottom: 24px;
      padding: 16px 20px;
      background: linear-gradient(135deg, rgba(37, 99, 235, 0.05) 0%, rgba(124, 58, 237, 0.05) 100%);
      border-radius: 10px;
    }
    .stat-item {
      display: flex;
      flex-direction: column;
    }
    .stat-value {
      font-size: 20px;
      font-weight: 600;
      color: var(--color-primary);
    }
    .stat-label {
      font-size: 12px;
      color: var(--text-muted);
    }
    
    /* Category Cards for project overview */
    .category-grid {
