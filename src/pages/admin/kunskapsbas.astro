      if (!SpeechRecognition) {
        alert('Din webbläsare stöder inte röstinmatning. Prova Chrome eller Edge.');
        return;
      }
      
      var targetElement = document.getElementById(targetId);
      var micBtn = targetElement.parentElement.querySelector('.mic-btn');
      
      // If already recording, stop
      if (isRecording && currentDictationTarget === targetId) {
        stopDictation();
        return;
      }
      
      // Stop any existing recording
      if (recognition) {
        recognition.stop();
      }
      
      recognition = new SpeechRecognition();
      recognition.lang = 'sv-SE';
      recognition.continuous = true;
      recognition.interimResults = true;
      
      currentDictationTarget = targetId;
      isRecording = true;
      micBtn.classList.add('recording');
      
      var finalTranscript = '';
      var interimTranscript = '';
      
      recognition.onresult = function(event) {
        interimTranscript = '';
        for (var i = event.resultIndex; i < event.results.length; ++i) {
          if (event.results[i].isFinal) {
            finalTranscript += event.results[i][0].transcript + ' ';
          } else {
            interimTranscript += event.results[i][0].transcript;
          }
        }
        targetElement.value = finalTranscript + interimTranscript;
      };
      
      recognition.onerror = function(event) {
        console.error('Speech recognition error:', event.error);
        stopDictation();
        if (event.error === 'not-allowed') {
          alert('Mikrofontillgång nekades. Kontrollera webbläsarens behörigheter.');
        }
      };
      
      recognition.onend = function() {
        if (isRecording) {
          // Recognition ended but we wanted to continue - restart
          try {
            recognition.start();
          } catch (e) {
            stopDictation();
          }
        } else if (summarizeWithAI && finalTranscript.trim()) {
          // Summarize with AI
          summarizeDictation(targetElement, finalTranscript.trim());
        }
      };
      
      try {
        recognition.start();
        showToast('Lyssnar... Klicka igen f\u00f6r att stoppa');
      } catch (e) {
        console.error('Could not start recognition:', e);
        stopDictation();
      }
