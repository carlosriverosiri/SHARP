      font-size: 17px;
      font-weight: 600;
      margin: 0;
      color: var(--text-primary);
      display: flex;
      align-items: center;
      gap: 8px;
    }
    
    .project-block-badge {
      font-size: 10px;
      font-weight: 600;
      padding: 3px 8px;
      border-radius: 12px;
      background: rgba(37, 99, 235, 0.1);
      color: var(--color-primary);
      text-transform: uppercase;
      letter-spacing: 0.3px;
    }
    
    /* Description */
    .project-block-description {
      font-size: 13px;
      color: var(--text-muted);
      line-height: 1.6;
      margin-bottom: 16px;
      flex: 1;
      display: -webkit-box;
      -webkit-line-clamp: 2;
      -webkit-box-orient: vertical;
      overflow: hidden;
    }
    
    /* Tags */
    .project-block-tags {
      display: flex;
      flex-wrap: wrap;
      gap: 6px;
      margin-top: auto;
    }
    
    .project-tag {
      font-size: 11px;
      font-weight: 500;
      padding: 5px 10px;
      border-radius: 8px;
      background: var(--bg-tertiary);
      color: var(--text-secondary);
      border: 1px solid transparent;
      cursor: pointer;
      transition: all 0.15s;
    }
    
    .project-tag:hover {
      background: var(--color-primary);
      color: white;
    }
    
    .project-tag.has-items {
      background: rgba(37, 99, 235, 0.08);
      color: var(--color-primary);
      border-color: rgba(37, 99, 235, 0.15);
    }
    
    .project-tag .tag-count {
      margin-left: 4px;
      font-weight: 400;
      opacity: 0.7;
    }
    
    /* Action buttons */
    .project-block-actions {
      display: flex;
      gap: 4px;
      opacity: 0;
      transition: opacity 0.2s;
    }
    
    .project-block:hover .project-block-actions {
      opacity: 1;
    }
    
    .project-block-btn {
      width: 30px;
      height: 30px;
      border-radius: 8px;
      border: none;
      background: var(--bg-tertiary);
      color: var(--text-muted);
      cursor: pointer;
      display: flex;
      align-items: center;
      justify-content: center;
      transition: all 0.15s;
    }
    
    .project-block-btn:hover {
      background: var(--color-primary);
      color: white;
    }
    
    .project-block-btn.delete:hover {
      background: #ef4444;
    }
    
    .project-block-btn svg {
      width: 14px;
      height: 14px;
    }
    
    /* Footer */
    .project-block-footer {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-top: 16px;
      padding-top: 12px;
      border-top: 1px solid var(--border-color);
      font-size: 12px;
    }
    
    .project-block-footer .doc-count {
      color: var(--text-muted);
      display: flex;
      align-items: center;
      gap: 4px;
    }
    
    .project-block-footer .doc-count svg {
      width: 14px;
      height: 14px;
      opacity: 0.6;
