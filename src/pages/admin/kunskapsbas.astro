      display: none;
      padding-left: 32px;
      margin-top: 4px;
    }
    
    .project.expanded .categories {
      display: block;
    }
    
    .category {
      display: flex;
      align-items: center;
      padding: 8px 12px;
      border-radius: 4px;
      cursor: pointer;
      transition: background 0.15s;
      gap: 8px;
      font-size: 14px;
      color: var(--text-secondary);
