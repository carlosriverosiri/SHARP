            content = await readFileAsText(file);
          } else {
            content = '## Fil: ' + file.name + '\n\n[Uppladdad fil]\n\n*Typ: ' + file.type + ', Storlek: ' + formatFileSize(file.size) + '*';
          }
          
          // Create document
          const res = await fetch('/api/kunskapsbas/items', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({
              project_id: currentProjectId,
              category: currentCategory,
              title: title,
              content: content
            })
          });
          
          const data = await res.json();
          if (data.error) throw new Error(data.error);
          
        } catch (err) {
          console.error('Error uploading file:', err);
          showToast('Kunde inte ladda upp ' + file.name);
        }
      }
      
      hideProgress();
      showToast(files.length + ' fil(er) uppladdade!');
      loadItems();
      loadProjects();
    }
    
    function readFileAsText(file) {
      return new Promise((resolve, reject) => {
        const reader = new FileReader();
        reader.onload = (e) => resolve(e.target.result);
        reader.onerror = (e) => reject(e);
        reader.readAsText(file);
      });
    }
    
    function formatFileSize(bytes) {
      if (bytes < 1024) return bytes + ' B';
      if (bytes < 1024 * 1024) return (bytes / 1024).toFixed(1) + ' KB';
      return (bytes / (1024 * 1024)).toFixed(1) + ' MB';
    }
    
    function showProgress(message) {
      const el = document.getElementById('uploadProgress');
      if (el) {
        el.textContent = message;
        el.style.display = 'block';
      }
    }
    
    function hideProgress() {
      const el = document.getElementById('uploadProgress');
      if (el) el.style.display = 'none';
    }
    
    // Dictation for creating documents
    var docRecognition = null;
    var docIsRecording = false;
    var docTranscript = '';
    
    function startDocumentDictation() {
      var SpeechRecognition = window.SpeechRecognition || window.webkitSpeechRecognition;
      if (!SpeechRecognition) {
        alert('Din webbläsare stöder inte röstinmatning. Prova Chrome eller Edge.');
        return;
      }
      
      var btn = document.getElementById('dictateBtn');
      
      if (docIsRecording) {
        stopDocumentDictation();
        return;
      }
      
      docRecognition = new SpeechRecognition();
      docRecognition.lang = 'sv-SE';
      docRecognition.continuous = true;
      docRecognition.interimResults = true;
      
      docIsRecording = true;
      docTranscript = '';
      btn.classList.add('recording');
      btn.innerHTML = '<svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><rect x="6" y="4" width="4" height="16"></rect><rect x="14" y="4" width="4" height="16"></rect></svg> Stoppa';
      showToast('Lyssnar... Tala nu!');
      
      docRecognition.onresult = function(event) {
        var interim = '';
        for (var i = event.resultIndex; i < event.results.length; ++i) {
          if (event.results[i].isFinal) {
            docTranscript += event.results[i][0].transcript + ' ';
          } else {
            interim += event.results[i][0].transcript;
          }
        }
        showProgress('Inspelat: ' + (docTranscript + interim).substring(0, 100) + '...');
      };
      
      docRecognition.onerror = function(event) {
        console.error('Speech error:', event.error);
        stopDocumentDictation();
        if (event.error === 'not-allowed') {
          alert('Mikrofontillgång nekades.');
        }
      };
      
      docRecognition.onend = function() {
        if (docIsRecording) {
          try { docRecognition.start(); } catch (e) { stopDocumentDictation(); }
        }
      };
      
      try {
        docRecognition.start();
      } catch (e) {
        console.error('Could not start:', e);
        stopDocumentDictation();
      }
    }
    
    async function stopDocumentDictation() {
      docIsRecording = false;
      if (docRecognition) docRecognition.stop();
      
      var btn = document.getElementById('dictateBtn');
      btn.classList.remove('recording');
      btn.classList.add('processing');
      btn.innerHTML = '<svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="spin"><circle cx="12" cy="12" r="10"></circle></svg> Bearbetar...';
      
      if (!docTranscript.trim()) {
        btn.classList.remove('processing');
        btn.innerHTML = '<svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M12 1a3 3 0 0 0-3 3v8a3 3 0 0 0 6 0V4a3 3 0 0 0-3-3z"></path><path d="M19 10v2a7 7 0 0 1-14 0v-2"></path><line x1="12" y1="19" x2="12" y2="23"></line><line x1="8" y1="23" x2="16" y2="23"></line></svg> Diktera';
        hideProgress();
        showToast('Ingen text inspelad');
        return;
      }
      
      showProgress('AI sammanfattar din diktering...');
      
      try {
        // Use AI to summarize and create title
        var res = await fetch('/api/ai-council/ask', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          credentials: 'include',
          body: JSON.stringify({
            prompt: 'Du får en transkribering av en dikterad anteckning. Skapa:\n1. En kort titel (max 8 ord)\n2. En strukturerad sammanfattning i markdown\n\nSvara i detta format:\nTITEL: [titeln]\n---\n[sammanfattningen]\n\nTranskribering:\n' + docTranscript,
            selectedModels: ['gpt-4o-mini'],
            runMode: 'parallel'
          })
        });
        
        var data = await res.json();
        var aiResponse = data.responses && data.responses['gpt-4o-mini'] ? data.responses['gpt-4o-mini'].content : null;
        
        var title = 'Dikterad anteckning ' + new Date().toLocaleDateString('sv-SE');
        var content = docTranscript;
        
        if (aiResponse) {
          var titleMatch = aiResponse.match(/TITEL:\s*(.+)/i);
          if (titleMatch) title = titleMatch[1].trim();
          
          var contentMatch = aiResponse.split('---');
          if (contentMatch.length > 1) {
            content = contentMatch.slice(1).join('---').trim();
          }
          content += '\n\n---\n\n## Originaltranskribering\n\n' + docTranscript;
        }
        
        // Create the document
        var createRes = await fetch('/api/kunskapsbas/items', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({
            project_id: currentProjectId,
            category: currentCategory,
            title: title,
            content: content
          })
        });
        
        var createData = await createRes.json();
        if (createData.error) throw new Error(createData.error);
        
        hideProgress();
        showToast('Dokument skapat!');
        loadItems();
        loadProjects();
        
      } catch (err) {
        console.error('Error creating dictated doc:', err);
        showToast('Kunde inte skapa dokument');
      }
      
      btn.classList.remove('processing');
      btn.innerHTML = '<svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M12 1a3 3 0 0 0-3 3v8a3 3 0 0 0 6 0V4a3 3 0 0 0-3-3z"></path><path d="M19 10v2a7 7 0 0 1-14 0v-2"></path><line x1="12" y1="19" x2="12" y2="23"></line><line x1="8" y1="23" x2="16" y2="23"></line></svg> Diktera';
      hideProgress();
    }
    
    // Open item
    function openItem(itemId) {
      const item = currentItems.find(i => i.id === itemId);
      if (!item) return;
      
      currentItemId = itemId;
      renderItems();
      
      document.getElementById('editor-title').value = item.title;
      document.getElementById('editor-content').value = item.content || '';
      document.getElementById('editor-panel').classList.add('open');
    }
    
    // Close editor
    function closeEditor() {
      document.getElementById('editor-panel').classList.remove('open');
      currentItemId = null;
      renderItems();
    }
    
    // Save item
    async function saveItem() {
      const title = document.getElementById('editor-title').value.trim();
      const content = document.getElementById('editor-content').value;
      
      if (!title) {
        showToast('Titel krävs');
        return;
      }
      
      try {
        const res = await fetch('/api/kunskapsbas/items', {
          method: 'PUT',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({
            id: currentItemId,
            title,
            content
          })
        });
        
        const data = await res.json();
        
        if (data.error) {
          showToast(data.error);
          return;
        }
        
        showToast('Sparat!');
        closeEditor();
        loadItems();
        loadProjects(); // Update counts
      } catch (err) {
        console.error('Error saving item:', err);
        showToast('Kunde inte spara');
      }
    }
    
    // Modal functions
    function openNewProjectModal() {
      document.getElementById('project-name').value = '';
      document.getElementById('project-description').value = '';
      document.getElementById('new-project-modal').classList.add('open');
      document.getElementById('project-name').focus();
    }
    
    function openNewItemModal() {
      if (!currentProjectId || !currentCategory) {
        showToast('Välj ett projekt och kategori först');
        return;
      }
      document.getElementById('item-title').value = '';
      document.getElementById('new-item-modal').classList.add('open');
      document.getElementById('item-title').focus();
    }
    
    function closeModal(id) {
      document.getElementById(id).classList.remove('open');
    }
    
    // Create project
    async function createProject() {
      console.log('createProject called');
      const nameInput = document.getElementById('project-name');
      const descInput = document.getElementById('project-description');
      
      if (!nameInput || !descInput) {
        console.error('Input elements not found');
        showToast('Fel: Kunde inte hitta formulärfält');
        return;
      }
      
      const name = nameInput.value.trim();
      const description = descInput.value.trim();
      
      console.log('Creating project:', { name, description });
      
      if (!name) {
        showToast('Projektnamn krävs');
        return;
      }
      
      try {
        showToast('Skapar projekt...');
        
        const res = await fetch('/api/kunskapsbas/projects', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({
            name,
            description
          })
        });
        
        console.log('Response status:', res.status);
        const data = await res.json();
        console.log('Response data:', data);
        
        if (data.error) {
          console.error('API error:', data.error);
          showToast('Fel: ' + data.error);
          return;
        }
        
        closeModal('new-project-modal');
        showToast('Projekt skapat!');
        loadProjects();
        
        // Select the new project
        currentProjectId = data.project.id;
        currentCategory = null;
      } catch (err) {
        console.error('Error creating project:', err);
        showToast('Nätverksfel: ' + err.message);
      }
    }
    
    // Create item
    async function createItem() {
      const title = document.getElementById('item-title').value.trim();
      
      if (!title) {
        showToast('Titel krävs');
        return;
      }
      
      try {
        const res = await fetch('/api/kunskapsbas/items', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({
            project_id: currentProjectId,
            category: currentCategory,
            title
          })
        });
        
        const data = await res.json();
        
        if (data.error) {
          showToast(data.error);
          return;
        }
        
        closeModal('new-item-modal');
        showToast('Dokument skapat!');
        loadItems();
        loadProjects(); // Update counts
        
        // Open the new item in editor
        currentItemId = data.item.id;
        document.getElementById('editor-title').value = data.item.title;
        document.getElementById('editor-content').value = '';
        document.getElementById('editor-panel').classList.add('open');
      } catch (err) {
        console.error('Error creating item:', err);
        showToast('Kunde inte skapa dokument');
      }
    }
    
    // Utilities
    function formatDate(dateStr) {
      const date = new Date(dateStr);
      const now = new Date();
      const diff = now - date;
      
      if (diff < 60000) return 'Just nu';
      if (diff < 3600000) return `${Math.floor(diff / 60000)} min sedan`;
      if (diff < 86400000) return `${Math.floor(diff / 3600000)} tim sedan`;
      if (diff < 604800000) return `${Math.floor(diff / 86400000)} dagar sedan`;
      
      return date.toLocaleDateString('sv-SE');
    }
    
    function showToast(message) {
      const toast = document.getElementById('toast');
      toast.textContent = message;
      toast.classList.add('show');
      setTimeout(() => toast.classList.remove('show'), 3000);
    }
    
    // Close modals on escape
    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape') {
        document.querySelectorAll('.modal-overlay.open').forEach(m => m.classList.remove('open'));
        closeEditor();
      }
    });
    
    // Close modal on overlay click
    document.querySelectorAll('.modal-overlay').forEach(overlay => {
      overlay.addEventListener('click', (e) => {
        if (e.target === overlay) {
          overlay.classList.remove('open');
        }
      });
    });
  </script>
