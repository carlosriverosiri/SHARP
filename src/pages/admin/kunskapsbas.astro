      font-size: 14px;
      line-height: 1.6;
      resize: none;
      outline: none;
    }
    
    .editor-footer {
      padding: 12px 16px;
      border-top: 1px solid var(--border-color);
      display: flex;
      justify-content: flex-end;
      gap: 8px;
