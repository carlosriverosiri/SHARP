    .project-block-icon svg {
      width: 24px;
      height: 24px;
      color: white;
    }
    
    /* Constrain ALL SVGs inside project blocks */
    .project-block svg {
      max-width: 24px;
      max-height: 24px;
      flex-shrink: 0;
    }
    
    .project-block-icon svg {
      width: 24px;
      height: 24px;
    }
    
