    }
    
    .sidebar-title {
      font-size: 14px;
      font-weight: 600;
      color: var(--text-primary);
      display: flex;
      align-items: center;
      gap: 8px;
    }
    
    .sidebar-actions {
      display: flex;
      gap: 4px;
    }
    
    .icon-btn {
      width: 32px;
      height: 32px;
      border: none;
      background: transparent;
      border-radius: 6px;
      cursor: pointer;
      display: flex;
      align-items: center;
      justify-content: center;
      color: var(--text-muted);
      transition: all 0.15s;
    }
    
    .icon-btn:hover {
      background: var(--bg-hover);
      color: var(--text-primary);
    }
    
    .tree-container {
      flex: 1;
      overflow-y: auto;
      padding: 12px;
    }
    
    /* Projekt */
    .project {
      margin-bottom: 8px;
    }
    
    .project-header {
      display: flex;
      align-items: center;
      padding: 10px 14px;
      border-radius: 6px;
      cursor: pointer;
      transition: background 0.15s;
      gap: 10px;
    }
    
    .project-header:hover {
      background: var(--bg-hover);
    }
    
    .project-header.active {
      background: var(--bg-active);
    }
    
    .project-chevron {
      width: 16px;
      font-size: 12px;
      color: var(--text-muted);
      transition: transform 0.2s;
      flex-shrink: 0;
      font-family: monospace;
    }
    
    .project.expanded .project-chevron {
      transform: rotate(90deg);
    }
    
    .project-name {
      flex: 1;
      font-size: 14px;
      font-weight: 500;
      white-space: nowrap;
      overflow: hidden;
      text-overflow: ellipsis;
    }
    
    .project-count {
      font-size: 12px;
      color: var(--text-muted);
      background: var(--bg-hover);
      padding: 2px 8px;
      border-radius: 10px;
      min-width: 20px;
      text-align: center;
    }
    
    /* Kategorier */
