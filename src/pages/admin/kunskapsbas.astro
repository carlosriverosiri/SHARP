 * Kunskapsbas - Projektorienterat dokumenthanteringssystem
 * URL: /admin/kunskapsbas
 * 
 * Features:
 * - Projektbaserad trädstruktur (som File Explorer)
 * - Fasta kategorier: dokument, litteratur, ljud, ai_fragor, prompter, radata
 * - Markdown-editor
 * - Molnbaserat via Supabase
 */

export const prerender = false;

import { arInloggad, hamtaAnvandare } from '../../lib/auth';

// Check authentication
if (!await arInloggad(Astro.cookies)) {
  return Astro.redirect('/personal');
}

const anvandare = await hamtaAnvandare(Astro.cookies);
if (!anvandare) {
  return Astro.redirect('/personal');
}
