    // Setup drag and drop for project blocks
    function setupDragAndDrop() {
      var blocks = document.querySelectorAll('.project-block');
      var draggedItem = null;
      
      blocks.forEach(function(block) {
        block.addEventListener('dragstart', function(e) {
          draggedItem = this;
          this.classList.add('dragging');
          e.dataTransfer.effectAllowed = 'move';
        });
        
        block.addEventListener('dragend', function() {
          this.classList.remove('dragging');
          draggedItem = null;
          document.querySelectorAll('.project-block').forEach(function(b) {
            b.classList.remove('drag-over');
          });
        });
        
        block.addEventListener('dragover', function(e) {
          e.preventDefault();
          if (this !== draggedItem) {
            this.classList.add('drag-over');
          }
        });
        
        block.addEventListener('dragleave', function() {
          this.classList.remove('drag-over');
        });
        
        block.addEventListener('drop', function(e) {
          e.preventDefault();
          this.classList.remove('drag-over');
          
          if (draggedItem && this !== draggedItem) {
            var container = document.getElementById('projectBlocks');
            var allBlocks = Array.from(container.children);
            var draggedIdx = allBlocks.indexOf(draggedItem);
            var targetIdx = allBlocks.indexOf(this);
            
            if (draggedIdx < targetIdx) {
              this.parentNode.insertBefore(draggedItem, this.nextSibling);
            } else {
              this.parentNode.insertBefore(draggedItem, this);
            }
            
            // Update projects array order
            var newOrder = Array.from(container.querySelectorAll('.project-block')).map(function(b) {
              return b.dataset.id;
            });
            
            // Reorder projects array
            projects.sort(function(a, b) {
              return newOrder.indexOf(a.id) - newOrder.indexOf(b.id);
            });
            
            // Save new order to backend
            saveProjectOrder(newOrder);
          }
        });
      });
    }
    
