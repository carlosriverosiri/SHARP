      // Profile definitions
      const profiles = {
        snabb: {
          name: 'Snabb',
          // Only Gemini - fastest, avoids Netlify timeout (26s max on free plan)
          models: ['gemini'],
          synthesis: 'gemini',  // Gemini syntetiserar sig själv = snabbast
