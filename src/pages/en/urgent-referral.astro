  title="Urgent Referral Knee, Shoulder & Elbow | Response within 24h"
  alternateUrl="/akut-remiss"
>

    <!-- Inject structured data in head -->
    <script type="application/ld+json" set:html={JSON.stringify(schemaData)} />

    <main>

        <section id="hero" class="bg-sky-700 text-white pt-24 pb-32">
            <div class="max-w-6xl mx-auto px-6 text-center">
                
