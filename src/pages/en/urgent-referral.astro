---
// We import your main layout that contains Header and Footer
import BaseLayout from '../../layouts/BaseLayout.astro';

// Structured data for SEO and AI (Schema.org)
const schemaData = {
  "@context": "https://schema.org",
  "@type": "MedicalWebPage",
  "name": "Urgent Referral Knee, Shoulder & Elbow Stockholm",
  "description": "Upload your referral digitally for acute knee, shoulder or elbow injuries. Södermalms Ortopedi are super-specialists in these joints and offer processing within 24 hours.",
  "provider": {
    "@type": "MedicalClinic",
    "name": "Södermalms Ortopedi",
    "address": {
      "@type": "PostalAddress",
      "addressLocality": "Stockholm",
      "addressRegion": "Stockholm County"
    }
  },
  "specialty": [
    "Knee surgery",
    "Shoulder surgery",
    "Elbow surgery"
  ]
};
