                                showSuccess();
                            } else {
                                alert('Kunde inte kopiera. Vänligen kopiera manuellt.');
                            }
                            
                            document.body.removeChild(textArea);
                        } catch (err) {
                            console.error('Fallback-kopiering misslyckades: ', err);
                            alert('Kunde inte kopiera. Vänligen kopiera manuellt.');
                        }
                        return;
                    }

                    // Modern clipboard-API
                    navigator.clipboard.writeText(password).then(() => {
                        showSuccess();
                    }).catch(err => {
                        console.error('Kunde inte kopiera lösenord: ', err);
                    });

                    function showSuccess() {
                        // Success! Visa feedback
                        label.innerHTML = "Lösenord Kopierat!";
                        textEl.innerHTML = "✓";
                        
                        // Byt färg till grön
                        label.classList.add('text-green-600', 'font-bold');
                        textEl.classList.add('text-green-600');
                        label.classList.remove('text-gray-600', 'group-hover:text-sky-800');
                        textEl.classList.remove('text-sky-700', 'group-hover:text-sky-800');

                        // Återställ efter 2 sekunder
                        setTimeout(() => {
                            label.innerHTML = originalLabel;
                            textEl.innerHTML = originalText;
                            label.classList.remove('text-green-600', 'font-bold');
                            textEl.classList.remove('text-green-600');
                            label.classList.add('text-gray-600', 'group-hover:text-sky-800');
                            textEl.classList.add('text-sky-700', 'group-hover:text-sky-800');
                        }, 2000);
                    }
                });
            });
        });
